<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colors -->

    <Color x:Key="PrimaryColor">#42A5F5</Color>
    <Color x:Key="SecondaryColor">#2196F3</Color>
    <Color x:Key="AccentColor">#6A1B9A</Color>
    <Color x:Key="BackgroundColor">White</Color>
    <Color x:Key="TextColor">Gray</Color>
    <Color x:Key="PlaceholderColor">Gray</Color>


    <!-- Styles -->
    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="CornerRadius" Value="25" />
    </Style>

    <Style x:Key="EntryStyle" TargetType="Entry">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource PlaceholderColor}" />
    </Style>

    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
    </Style>
</ResourceDictionary>